<% layout("/layouts/boilerplate") %>

    <div class="row mt-4">
        <div class="col-8 offset-2">
            <h2 class="mb-3">Create a New Listing</h2>
            <form action="/listings" method="POST">
                <div class="mb-3">
                    <label for="title" class="form-label">Name</label>
                    <input type="text" class="form-control" name="listing[title]" placeholder="Enter name of hotel"
                        id="title">
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea class="form-control" name="listing[description]" id="description"
                        placeholder="Enter description"></textarea>
                </div>
                <div class="mb-3">
                    <label for="img" class="form-label">Image URL</label>
                    <input type="text" class="form-control" name="listing[image.url]" id="img"
                        placeholder="Enter image url">
                </div>
                <div class="row">
                    <div class="col-md-4 mb-3">
                        <label for="price" class="form-label">Price</label>
                        <input type="number" class="form-control" name="listing[price]" id="price"
                            placeholder="Enter price">
                    </div>
                    <div class="col-md-8 mb-3">
                        <label for="country" class="form-label">Country</label>
                        <input type="text" class="form-control" name="listing[country]" id="country"
                            placeholder="Enter country">
                    </div>
                </div>
                <div class="mb-4">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" class="form-control" name="listing[location]" id="location"
                        placeholder="Enter location">
                </div>

                <button type="submit" class="btn mb-4 add-btn">Add</button>
            </form>
        </div>
    </div>