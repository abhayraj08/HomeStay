<% layout("/layouts/boilerplate")  %>
<body>
    <h2>Update Listing</h2>
    <form action="/listings/<%= listing._id %>?_method=PUT" method="POST">
        <div class="input-text">
            <label for="title">Name </label>
            <input type="text" name="listing[title]" id="title" placeholder="Enter title" value="<%= listing.title %>">
        </div>
        <div class="input-text">
            <label for="description">Description</label>
            <textarea name="listing[description]" id="description"
                placeholder="Enter description"><%= listing.description %></textarea>
        </div>
        <div class="input-text">
            <label for="img">Image URL</label>
            <input type="text" name="listing[image.url]" id="img" placeholder="Enter image URL/Link"
                value="<%= listing.image.url %>">
        </div>
        <div class="input-text">
            <label for="price">Price</label>
            <input type="number" name="listing[price]" id="price" placeholder="Enter price"
                value="<%= listing.price %>">
        </div>
        <div class="input-text">
            <label for="location">Location</label>
            <input type="text" name="listing[location]" id="location" placeholder="Enter location"
                value="<%= listing.location %>">
        </div>
        <div class="input-text">
            <label for="country">Country</label>
            <input type="text" name="listing[country]" id="country" placeholder="Enter country"
                value="<%= listing.country %>">
        </div>

        <button type="submit">Update</button>
    </form>
    <a href="/listings/<%= listing._id %>">back</a>
</body>