<% layout("/layouts/boilerplate") %>

    <div class="row mt-4">
        <div class="col-8 offset-2">
            <h2 class="mb-3"><%= listing.title %></h2>
            <div class="card listing-card">
                <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="">
                <div class="card-body">
                    <p class="card-text">
                        <%= listing.description %> <br>
                        &#8377;<%= listing.price.toLocaleString("en-IN") %> <br>
                        <%= listing.location %> <br>
                        <%= listing.country %>
                    </p>
                   <div class="mt-3">
                       <a href="/listings/<%= listing._id %>/edit" class="btn edit-btn">Edit</a>                
                       <form class="d-inline" action="/listings/<%= listing._id %>?_method=DELETE" method="POST">
                           <button class="btn delete-btn delete-btn ms-3">Delete</button>
                       </form>
                   </div>
                </div>
            </div>


            <!-- Review Form -->
            <h4>Leave a Review</h4>
            <form action="/listings/<%= listing._id %>/reviews" method="POST" class="needs-validation" novalidate>
                <div>
                    <label for="rating" class="form-label">Rating</label>
                    <input type="range" class="form-range" min="1" max="5" id="rating" name="review[rating]">
                </div>
                <div>
                    <label for="comment" class="form-label">Comments</label>
                    <textarea class="form-control" id="comment" rows="5" name="review[comment]" required></textarea>
                    <div class="invalid-feedback">Please add some comments for review</div>
                </div>
                <button class="btn btn-outline-dark mt-3">Submit</button>
            </form>
                
            <!-- Review Showing -->
            <div class="row">
                <h4 class="mt-4">All Reviews</h4>
                <% for( let review of listing.reviews ) { %>
                <div class="card col-5 mx-3 mb-3 p-3">
                    <div class="card-body">
                        <h5 class="card-text">John Doe</h5>
                        <p class="card-text mb-0">Comment: <%= review.comment %></p>
                        <p class="card-text mb-3">Rating: <%= review.rating %> stars</p>
                    </div>
                    <form action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" method="POST">
                        <button class="btn btn-sm delete-btn">Delete</button>
                    </form>
                </div>
                <% } %>
            </div>
            
        </div>
    </div>
    